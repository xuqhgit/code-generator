<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<div class="form-dialog">
    <div class="box box-info">
        <div class="box-header ">
            <h3 class="box-title">编辑</h3>
        </div>
        <form id="edit{{ className }}Form" class="form-horizontal" role="form">
            <input type="hidden" name="id" value="${ {{ sClassName }}.id }">
            <div class="box-body">
                {% for field in fields %}
                {%- if  field.editField  -%}
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ field.title }}：</label>
                    <div class="col-sm-8">
                         <input type="text" name="{{ field.name }}" value="${ {{ sClassName }}.{{ field.name }} }" class="form-control {% if field.type=='Date' %}form_datetime{% endif %}" placeholder="{{ field.patternMessage }}">
                    </div>
                </div>
                {%- endif -%}
                {% endfor %}
            </div>
            <div class="box-footer">
                <a id="edit{{ className }}" class="btn btn-info pull-right">保存</a>
            </div>
        </form>
    </div>
</div>


